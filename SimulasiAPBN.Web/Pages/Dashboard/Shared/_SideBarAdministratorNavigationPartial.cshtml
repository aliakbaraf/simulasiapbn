<li class="nav-item @if (path.StartsWithSegments("/Dashboard/Simulation/UserManagement")) { @Html.Raw("active") }">
    <a class="nav-link" asp-page="/Dashboard/Simulation/UserManagement">
        <i class="fas fa-fw fa-gamepad"></i>
        <span>Manajemen Pengguna</span>
    </a>
</li>

<li class="nav-item @if (path.StartsWithSegments("/Dashboard/Simulation/GameSettings")) { @Html.Raw("active") }">
    <a class="nav-link" asp-page="/Dashboard/Simulation/GameSettings">
        <i class="fas fa-fw fa-gamepad"></i>
        <span>Pengaturan Permainan</span>
    </a>
</li>
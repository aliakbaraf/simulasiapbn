<div class="row" v-for="alert in alerts" v-if="!!alert && !!alert.text">
    <div class="col-12">
        <div class="alert alert-dismissible fade show font-weight-light"
             v-bind:class="['alert-' + alert.type]"
             role="alert">
            <strong>{{alert.title}}</strong><br />
            {{alert.text}}
            <button type="button" class="close" data-dismiss="alert" aria-label="Tutup" v-on:click="onAlertClose">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
</div>

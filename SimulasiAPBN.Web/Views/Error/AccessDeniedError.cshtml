@*
    Simulasi APBN

    Program ditulis oleh Danang Galuh Tegar Prasetyo (https://danang.id/)
    untuk Kementerian Keuangan Republik Indonesia.
*@
@{
    Layout = "_Layout";
    ViewBag.Title = "Akses Ditolak";
}

@section Styles
{
    <style>
        .compatibility-error .app-image {
            width: 80%;
            max-width: 24rem;
        }
    </style>
}
<div class="d-flex flex-column justify-content-center align-items-center text-center  w-100 p-4"
     style="min-height: calc(100vh - 4rem);">
    <img class="application-logo"
         src="~/media/application-logo.png"
         alt="Simulasi APBN"/>
    <h3 class="mt-5 mb-3">
        <i class="fas fa-fw fa-sm fa-exclamation-triangle"></i>&nbsp;Terjadi kesalahan
    </h3>
    <p class="mb-3">
        <strong>Anda tidak memiliki hak untuk mengakses sumber daya ini.</strong>
    </p>
    <p>
        Silakan kembali ke <a href="/">Beranda</a>.
    </p>
</div>